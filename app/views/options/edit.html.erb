<h2>Editing option: <%= @option.name %></h2>

<%= option_edit_help(@option) %>

<% form_for(@option) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :value %><br />
    <%= f.text_area :value %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<ul class="pipes">
  <li><%= link_to 'Show', @option %></li>
  <li><%= link_to 'All Options', options_path %></li>
</ul>